4■■ Dynamic Array (Vector) using realloc()
#include <stdio.h>
#include <stdlib.h>
typedef struct {
 int *data;
 int size;
 int capacity;
} Vector;
void init(Vector *v) {
 v->size = 0;
 v->capacity = 2;
 v->data = (int*) malloc(v->capacity * sizeof(int));
}
void push(Vector *v, int val) {
 if (v->size == v->capacity) {
 v->capacity *= 2;
 v->data = (int*) realloc(v->data, v->capacity * sizeof(int));
 }
 v->data[v->size++] = val;
}
void print(Vector *v) {
 for (int i = 0; i < v->size; i++)
 printf("%d ", v->data[i]);
 printf("\n");
}
int main() {
 printf("pavan kumar N\n");
 printf("1SV24CS093\n");
 Vector v;
 init(&v);
 int n, x;
 printf("Enter number of elements: ");
 scanf("%d", &n);
 for (int i = 0; i < n; i++) {
 scanf("%d", &x);
 push(&v, x);
 }
 print(&v);
 free(v.data);
 return 0;
}
